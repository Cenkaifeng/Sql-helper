// ▼▼ 气泡 ▼▼
.bubble
    padding: basePadding
    background: gray6
    border-radius: largeRounded
    margin-bottom: 20px
    flex-shrink: 0 // 禁止缩小
    align-self: flex-start // 改为左对齐
    max-width: 90%
    word-wrap: break-word
    font-weight: 500
    & p:first-child // 聊天气泡的名字
        font-weight: 400

.bubble-right // User 的聊天气泡
  align-self: flex-end
  background: brand4
  &>p
    font-weight: 400

.bubble-center // System 的聊天气泡
    width: 100%
    max-width: 100%
    // color: warning1
    background-color: warning2
    text-align: center
    font-weight: 400

.bubble-name
    color: gray3
    font-weight: 400
    margin-bottom: 5px
    user-select: none
